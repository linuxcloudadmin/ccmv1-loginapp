    <modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>org.springframework.boot</groupId>
		<artifactId>spring-boot-starter-parent</artifactId>
		<version>3.3.6</version>
		<relativePath/> <!-- lookup parent from repository -->
	</parent>

	<groupId>com.ascendpgp</groupId>
	<artifactId>customerlogin</artifactId>
	<version>0.0.1-SNAPSHOT</version>
	<name>customerlogin</name>
	<description>Customer login Spring Boot project </description>
	<url/>
	<licenses>
		<license/>
	</licenses>
	<developers>
		<developer/>
	</developers>
	<scm>
		<connection/>
		<developerConnection/>
		<tag/>
		<url/>
	</scm>
	<properties>
		<java.version>17</java.version>
		<spring-cloud.version>2023.0.4</spring-cloud.version>
		<java.version>17</java.version>
		<spring-cloud.version>2023.0.4</spring-cloud.version>
		<!-- SonarQube properties -->
		<java.version>17</java.version>
		<spring-cloud.version>2023.0.4</spring-cloud.version>
		<!-- Update JaCoCo version to 0.8.10 -->
		<jacoco.version>0.8.10</jacoco.version>
		<sonar.host.url>http://localhost:9000</sonar.host.url>
		<sonar.java.coveragePlugin>jacoco</sonar.java.coveragePlugin>
		<sonar.dynamicAnalysis>reuseReports</sonar.dynamicAnalysis>
		<sonar.coverage.jacoco.xmlReportPaths>${project.build.directory}/site/jacoco/jacoco.xml</sonar.coverage.jacoco.xmlReportPaths>
		<sonar.coverage.exclusions>
			**/dto/**,
			**/model/**,
			**/config/**,
			**/CustomerloginApplication.java,
			**/exception/**
		</sonar.coverage.exclusions>
		<sonar.cpd.exclusions>
			**/exception/**,
			**/model/**,
			**/dto/**
		</sonar.cpd.exclusions>
	</properties>

	<dependencies>
		<!-- Add these dependencies in your pom.xml -->
		<dependency>
			<groupId>org.testcontainers</groupId>
